// basic information about the workflow
manifest {
  name = '{{ cookiecutter.artefact_id }}'
  description = '{{ cookiecutter.artefact_description }}'
  version = '0.0.1'
  homePage = '{{ cookiecutter.artefact_git }}'
  author = '{{ cookiecutter.artefact_author }}'
  nextflowVersion = '>=20.07.1'
}

// your workflow parameters
params {
  resultsDir = "./results/"
}

// include basic process configuration options
includeConfig 'conf/base.config' 

// specify the container to be used
process.container = "docker.pkg.github.com/{{ cookiecutter.artefact_org }}/{{ cookiecutter.artefact_id }}/{{ cookiecutter.artefact_id }}"